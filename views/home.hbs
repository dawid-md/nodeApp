        const buttonIn = document.querySelector('#incr');
        buttonIn.addEventListener('click', function(e) {
        numberVA = parseInt(numberVA) + 100
        fetch('/up', {
            method: 'PUT',
            headers: {
            'Accept': 'application/json',
            'Content-Type': 'application/json'
            },
            body: JSON.stringify({_id: numberID, newVal: numberVA})
        }).then(function(response) {
            if(response.ok) {
                document.querySelector('h1').textContent = numberVA
                return;
            }
            throw new Error('Request failed.');
            });
        })

        const buttonDe = document.querySelector('#decr');
        buttonDe.addEventListener('click', function(e) {
        numberVA = parseInt(numberVA) - 100
        fetch('/up', {
            method: 'PUT',
            headers: {
            'Accept': 'application/json',
            'Content-Type': 'application/json'
            },
            body: JSON.stringify({_id: numberID, newVal: numberVA})
        }).then(function(response) {
            if(response.ok) {
                document.querySelector('h1').textContent = numberVA
                return;
            }
            throw new Error('Request failed.');
            });
        })
        
    </script>
    
</body>
