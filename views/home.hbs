        .btn-primary{
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <script src="client.js"></script>
    <div class="container">
        <div class="row">
            <div class="col-12 d-flex justify-content-center text-center">
                <h1>{{ nVA }}</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-12 d-flex justify-content-center text-center">
                <button class="btn btn-lg btn-primary" id="incr">Increment</button>
                <button class="btn btn-lg btn-light" id="decr">Decrement</button>
            </div>
        </div>
    </div>

    <script>
        let numberVA = document.querySelector('h1').textContent
        let numberID = {{{ nID }}}   //triple brackets with JSON.stringify() escape _id conversion

        {{!-- const button = document.querySelector('#btnx');
